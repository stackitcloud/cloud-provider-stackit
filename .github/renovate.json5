{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  additionalReviewers: [
    'hown3d',
    'rgroemmer',
  ],
  labels: [
    'kind/upgrade',
  ],
  postUpdateOptions: [
    'gomodTidy',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'github.com/onsi/gomega',
        'github.com/onsi/ginkgo/v2',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      addLabels: [
        'skip-review',
      ],
    },
  ],
}
